{
  "name": "@action-badges/core",
  "version": "0.3.0",
  "description": "Create SVG badges with GitHub actions",
  "main": "src/index.js",
  "scripts": {
    "build": "ncc build src/action.js -o dist --minify",
    "lint": "eslint \"src/**/*.js\"",
    "prettier": "prettier --write \"src/**/*.js\"",
    "prettier:check": "prettier --check \"src/**/*.js\"",
    "test": "c8 --reporter=text mocha \"src/**/*.spec.js\"",
    "coverage": "c8 report --reporter=cobertura"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/action-badges/core.git"
  },
  "homepage": "https://github.com/action-badges/core",
  "author": "chris48s",
  "license": "MIT",
  "files": [
    "src/**/!(*.spec).js",
    "CHANGELOG.md",
    "docs/*"
  ],
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^6.0.0",
    "badge-maker": "^3.3.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "c8": "^8.0.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "sinon": "^17.0.0"
  },
  "engines": {
    "node": ">= 20"
  },
  "type": "module"
}
