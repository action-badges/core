{
  "name": "@action-badges/core",
  "version": "0.2.0",
  "description": "Create SVG badges with GitHub actions",
  "main": "src/index.js",
  "scripts": {
    "build": "ncc build src/action.js -o dist --minify",
    "lint": "eslint \"src/**/*.js\"",
    "prettier": "prettier --write \"src/**/*.js\"",
    "prettier:check": "prettier --check \"src/**/*.js\"",
    "test": "nyc --reporter=text mocha \"src/**/*.spec.js\"",
    "coverage": "nyc report --reporter=cobertura"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/action-badges/core.git"
  },
  "homepage": "https://github.com/action-badges/core",
  "author": "chris48s",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^5.0.0",
    "badge-maker": "^3.3.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "sinon": "^11.1.0"
  },
  "engines": {
    "node": ">= 12"
  }
