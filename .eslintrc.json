{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "mocha/no-skipped-tests": [
      "error"
    ],
    "mocha/no-exclusive-tests": [
      "error"
    ],
    "no-unused-vars": [
      "error",
      { "args": "none" }
    ]
  }
}
